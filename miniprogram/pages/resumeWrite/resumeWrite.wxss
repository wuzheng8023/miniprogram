/*
控制每一个项之间间隔
*/

.item {
  padding: 25rpx 0 0 0;
}

/*
控制每一个输入框样式字体等
*/

.input {
  width: 600rpx;
  height: 65rpx;
  border: 1px solid lightgray;
  padding: 0 0 0 20rpx;
  font-size: 14px;
}

/*
对多文本框样式设定
*/
textarea{
  border: 1px solid lightgray;
  padding: 0 0 0 20rpx;
  font-size: 14px;
}

/*
控制说明文本
*/

.text {
  display: flex;
  justify-content: left;
  padding: 0 0 3px 41rpx;
  font-size: 16px;
}

/*
控制输入框位置
*/

.input-loction {
  display: flex;
  justify-content: center;
}

/*
按钮布局
*/

.btn-area {
  display: flex;
  padding: 50rpx 0 5rpx 0;
}

.submitbutton {
  background-color: #00a383;
  border-radius: 0;
  width: 100%;
}

.restbutton {
  background-color: #eeee;
  border-radius: 0;
}

.preview {
  background-color: rgba(56, 233, 233, 0.281);
  border-radius: 0;
}

/*
横线设置
*/

.divLine {
  background: #e0e3da;
  width: 100%;
  height: 5rpx;
}
