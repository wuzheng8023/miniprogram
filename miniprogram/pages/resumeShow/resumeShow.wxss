/*
控制每一个项之间间隔
*/

.item {
  padding: 25rpx 0 0 0;
}

/*
对上半部分输入框样式的修改
*/

.part1 input {
  width: 400rpx;
  height: 65rpx;
  /* border: 1px solid lightgray; */
  padding: 0 0 0 20rpx;
  font-size: 14px;
}

/*
控制每一个输入框样式字体等
*/

.input {
  width: 600rpx;
  height: 65rpx;
  border: 1px solid lightgray;
  padding: 0 0 0 20rpx;
  font-size: 14px;
}

/*
控制说明文本
*/

.text {
  display: flex;
  justify-content: left;
  padding: 0 0 3px 41rpx;
  font-size: 16px;
}

/*
控制输入框位置
*/

.input-loction {
  display: flex;
  justify-content: center;
}

/*
横线设置
*/

.divLine {
  background: #e0e3da;
  width: 100%;
  height: 5rpx;
}
/*
让form表单布满整个容器
*/
form {
  /* border: 2px solid black; */
  width: 100%;
  height: 100%;
}
/*
多行文本控制
*/
textarea {
  border: 1px solid lightgray;
  padding: 0 0 0 20rpx;
  font-size: 14px;
}
/*
内容包含姓名，性别出生年月，照片；
*/
.part1 {
  display: flex;
  justify-content: space-between;
}

/*
内容包含照片
*/
.part1-1 {
  display: block;
  /* border: 2px solid green; */
  padding: 30rpx 20rpx 0 0;
}
/*
part1-2内容包含姓名、性别、出现年月；
*/
.part1-2 {
  display: block;
  width: 100%;
}
/*
part1-2-1内容包含性别，出生年月，目的是让二者并列显示；
*/
.part1-2-1 {
  display: flex;
  justify-content: space-between;
  padding: 0 0 0 20rpx;
}

/*
.sex是指性别所在的容器
*/
.sex input {
  width: 100rpx;
  margin: 0 0 0 30rpx;
}
/*
.birth是指性别所在的容器
*/
.birth input {
  width: 200rpx;
  margin: 5rpx 50rpx 0 5rpx;
}

.birth .text {
  padding: 0 10rpx 3px 0rpx;
}

.sex .text {
  padding: 0 0 3px 20rpx;
}
